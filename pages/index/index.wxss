/* 家长管理首页样式 - 重构版 */
.container {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 头部区域 */
.header-section {
  padding: 40rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 用户信息头部 */
.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  display: flex;
  flex-direction: column;
}

.welcome-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.date-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 孩子选择器区域 */
.child-selector-wrapper {
  margin: 32rpx 0;
}

/* 当前孩子统计卡片 */
.current-child-stats {
  margin-top: 24rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  backdrop-filter: blur(20rpx);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: black;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.8);
}

.notification-icon {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.notification-icon .icon {
  font-size: 28rpx;
  color: white;
}

.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
}

/* 孩子切换器 */
.child-switcher {
  height: 280rpx;
  margin-bottom: 16rpx;
}

.child-swiper {
  height: 100%;
}

.child-card-main {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin: 0 16rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  min-height: 240rpx;
  box-sizing: border-box;
}

.child-avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 32rpx;
  border: 4rpx solid rgba(102, 126, 234, 0.2);
  flex-shrink: 0;
}

.child-info-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 120rpx;
}

.child-name-large {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.child-details-main {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.3;
}

.child-stats {
  display: flex;
  gap: 40rpx;
}

.stat-item-small {
  text-align: center;
  flex: 1;
}

.stat-number-small {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 6rpx;
  line-height: 1;
}

.stat-label-small {
  font-size: 20rpx;
  color: #666;
  line-height: 1;
}

/* 孩子管理按钮 */
.child-management {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.child-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.child-actions {
  display: flex;
  gap: 16rpx;
}

.child-action-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  font-size: 22rpx;
  backdrop-filter: blur(10rpx);
}

.child-action-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 内容区域 */
.section {
  margin: 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

/* 今日任务区域 */
.task-overview {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.progress-circle {
  width: 120rpx;
  height: 120rpx;
  margin-right: 32rpx;
}

.circle-bg {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #e9ecef;
  overflow: hidden;
}

.circle-fill {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: conic-gradient(#667eea 0deg, #764ba2 180deg, #e9ecef 180deg);
  border-radius: 50%;
  transform-origin: center;
}

.circle-inner {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progress-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.progress-info {
  flex: 1;
}

.progress-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.progress-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.progress-points {
  font-size: 24rpx;
  color: #28a745;
  font-weight: bold;
}

.today-task-list {
  margin-top: 24rpx;
}

.view-more {
  text-align: center;
  padding: 24rpx;
  color: #667eea;
  font-size: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.empty-tasks {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.add-task-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 挑战任务 */
.challenge-list {
  margin-top: 24rpx;
}

.challenge-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border-left: 6rpx solid #ffc107;
}

.challenge-info {
  flex: 1;
  margin-right: 24rpx;
}

.challenge-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.challenge-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.challenge-reward {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.reward-points {
  font-size: 20rpx;
  color: #28a745;
  background: rgba(40, 167, 69, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.challenge-deadline {
  font-size: 20rpx;
  color: #dc3545;
  background: rgba(220, 53, 69, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.challenge-progress {
  width: 120rpx;
  text-align: center;
}

.progress-bar-small {
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill-small {
  height: 100%;
  background: linear-gradient(90deg, #ffc107, #fd7e14);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-percent-small {
  font-size: 20rpx;
  color: #666;
}

/* 奖励区域 */
.subsection-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.available-rewards {
  margin-bottom: 32rpx;
}

.reward-scroll {
  width: 100%;
  white-space: nowrap;
}

.reward-horizontal-list {
  display: flex;
  gap: 16rpx;
  padding-bottom: 16rpx;
}

.reward-card {
  flex-shrink: 0;
  width: 160rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
}

.reward-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.reward-name-small {
  display: block;
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.reward-points-small {
  font-size: 20rpx;
  color: #667eea;
  font-weight: bold;
}

.reward-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.reward-grid-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  position: relative;
}

.reward-icon-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
}

.reward-info-small {
  flex: 1;
}

.reward-name-grid {
  display: block;
  font-size: 24rpx;
  color: #333;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.reward-points-grid {
  font-size: 20rpx;
  color: #667eea;
  font-weight: bold;
}

.exchange-status {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.exchange-status.can-exchange {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
}

.exchange-status.cannot-exchange {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

/* 快捷操作 */
.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.action-card {
  background: #f8f9fa;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  text-align: center;
  transition: transform 0.2s ease;
}

.action-card:active {
  transform: scale(0.98);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
}

.action-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 空状态 */
.empty-child-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 60rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.add-child-btn-main {
  background: white;
  color: #667eea;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.add-child-btn-main:active {
  background: #f0f0f0;
}

/* 任务管理模块样式 */
.section-container {
  margin: 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.manage-mode-btn {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.manage-mode-btn.active {
  background: #667eea;
  color: white;
}

.manage-mode-btn:active {
  opacity: 0.8;
}

.manage-mode-btn .btn-icon {
  font-size: 24rpx;
}

.manage-mode-btn .btn-text {
  font-size: 22rpx;
}

.add-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.add-btn:active {
  opacity: 0.9;
}

/* 任务列表样式 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 奖励列表样式 */
.reward-list {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 16rpx;
}

/* 空状态样式 */
.empty-list-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .reward-list {
    grid-template-columns: 1fr;
  }
  
  .section-container {
    margin: 24rpx;
    padding: 24rpx;
  }
}

/* 底部安全区域 */
.safe-area-bottom {
  height: 120rpx;
}

/* 加载和错误状态 */
.loading-overlay, .error-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content, .error-content {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}

.error-text {
  font-size: 28rpx;
  color: #dc3545;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.retry-button {
  background: #667eea;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.retry-button:active {
  background: #5a67d8;
}