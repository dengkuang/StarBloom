/* pages/rewards/add.wxss */

/* 孩子选择器样式 */
.children-selector {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 20rpx;
}

.child-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.child-item.selected {
  background: #e3f2fd;
  border-color: #2196f3;
}

.child-item .child-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.child-item .child-age {
  font-size: 28rpx;
  color: #666;
  margin-left: 16rpx;
}

.child-item .check-icon {
  font-size: 32rpx;
  color: #2196f3;
  font-weight: bold;
}

/* 习惯标签样式 */
.habit-tags-container {
  margin-top: 20rpx;
}

.tag-group {
  margin-bottom: 32rpx;
}

.group-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
  border-left: 6rpx solid #2196f3;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.tag-item.selected {
  background: #e3f2fd;
  border-color: #2196f3;
}

.tag-item .tag-text {
  font-size: 26rpx;
  color: #666;
}

.tag-item.selected .tag-text {
  color: #2196f3;
  font-weight: 500;
}

/* 选择器样式增强 */
.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e5e5e5;
  min-height: 88rpx;
}

.picker-text {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

.picker-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 16rpx;
}

/* 表单提示文字 */
.form-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  line-height: 1.4;
}

/* 错误状态样式 */
.error-text {
  display: block;
  font-size: 24rpx;
  color: #f44336;
  margin-top: 8rpx;
}

.form-input.error,
.form-textarea.error {
  border-color: #f44336;
  background: #fef5f5;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .child-item {
    padding: 20rpx;
  }
  
  .tag-item {
    padding: 10rpx 20rpx;
  }
  
  .picker-display {
    padding: 20rpx;
  }
}
/* 添加奖励页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.header-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.back-icon {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.header-info {
  flex: 1;
}

.page-title {
  display: block;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.page-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 表单容器 */
.form-container {
  padding: 30rpx;
}

.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-input.error {
  border-color: #dc3545;
  background: #fff5f5;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea.error {
  border-color: #dc3545;
  background: #fff5f5;
}

.error-text {
  display: block;
  color: #dc3545;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.form-hint {
  display: block;
  color: #6c757d;
  font-size: 24rpx;
  margin-top: 10rpx;
  line-height: 1.4;
}

/* 积分选择器 */
.points-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.points-btn {
  width: 60rpx;
  height: 60rpx;
  background: #667eea;
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.points-btn.decrease {
  background: #6c757d;
}

.points-btn.increase {
  background: #28a745;
}

.points-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  min-width: 120rpx;
  text-align: center;
}

/* 选择器 */
.form-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  color: #6c757d;
  font-size: 24rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #e9ecef;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.reset-btn {
  background: #f8f9fa;
  color: #6c757d;
  border: 2rpx solid #e9ecef;
}

.save-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn[disabled] {
  opacity: 0.6;
}

/* 安全区域 */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
}