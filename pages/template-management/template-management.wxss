/* pages/template-management/template-management.wxss */
/* 模板管理页面样式 - 与项目整体风格保持一致 */
.container {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.mode-indicator {
  align-self: flex-start;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  backdrop-filter: blur(10rpx);
}

.mode-indicator.template-mode {
  background: rgba(255, 255, 255, 0.2);
}

.mode-indicator.package-mode {
  background: rgba(255, 255, 255, 0.2);
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.create-btn {
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  border: none;
  border-radius: 25rpx;
  padding: 18rpx 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  gap: 10rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.create-btn:active {
  transform: scale(0.95);
  background: #f0f0f0;
}

.btn-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 模式切换器 */
.mode-switcher {
  display: flex;
  margin: 0 32rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 8rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  gap: 8rpx;
}

.mode-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.mode-option.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.mode-option:not(.active):active {
  background: #f8f9fa;
}

.mode-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.mode-label {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 22rpx;
  opacity: 0.8;
  text-align: center;
  line-height: 1.3;
}

/* 标签页导航 */
.tab-bar {
  display: flex;
  margin: 0 32rpx 24rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 8rpx;
}

.tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  position: relative;
}

.tab.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.tab-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #666;
}

.tab.active .tab-text {
  color: white;
}

.tab-count {
  background: rgba(255, 255, 255, 0.3);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  margin-left: 8rpx;
  min-width: 24rpx;
  text-align: center;
}

/* 内容区域 */
.content-area {
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  min-height: 60vh;
  padding: 32rpx;
  flex: 1;
  overflow-y: auto;
}

/* 包组模式样式 */
.package-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
  margin-top: 16rpx;
}

.package-card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
  overflow: hidden;
}

.package-card.selected {
  border-color: #667eea;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
}

.package-card:active {
  transform: translateY(-2rpx);
}

.package-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #f8f9fa;
  cursor: pointer;
  border-bottom: 1rpx solid #e9ecef;
}

.package-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.package-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.package-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.package-stats {
  font-size: 24rpx;
  color: #666;
}

.package-checkbox {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #667eea;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.package-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: white;
}

.package-action-btn {
  flex: 1;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.package-action-btn.task-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.package-action-btn.reward-btn {
  background: linear-gradient(135deg, #ffc107, #fd7e14);
  color: white;
}

.package-action-btn:active {
  transform: scale(0.98);
}

.package-preview {
  padding: 24rpx 32rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #e9ecef;
}

.preview-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 16rpx;
}

.preview-items {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.preview-item {
  background: white;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #666;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 模板列表模式样式 */
.filter-bar {
  margin-bottom: 24rpx;
}

.filter-group {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.filter-btn {
  background: white;
  border: 2rpx solid #e9ecef;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  min-width: 140rpx;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-btn.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-color: #667eea;
}

.filter-btn.clear-btn {
  background: linear-gradient(135deg, #dc3545, #c82333);
  color: white;
  border-color: #dc3545;
}

.filter-btn:active {
  transform: scale(0.98);
}

.filter-icon {
  font-size: 24rpx;
}

.filter-text {
  font-size: 24rpx;
  font-weight: 500;
}

.filter-arrow {
  font-size: 18rpx;
  opacity: 0.7;
}

.template-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
  margin-top: 16rpx;
}

.template-card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
}

.template-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.template-card-header {
  display: flex;
  align-items: flex-start;
  padding: 32rpx;
  background: #f8f9fa;
  gap: 20rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.template-type-icon {
  font-size: 48rpx;
  margin-top: 4rpx;
}

.template-title-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.template-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
}

.template-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.badge {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.badge.points {
  background: rgba(255, 193, 7, 0.1);
  color: #ffc107;
}

.badge.age {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.badge.category {
  background: rgba(118, 75, 162, 0.1);
  color: #764ba2;
}

.template-status {
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: bold;
  min-width: 80rpx;
  text-align: center;
}

.template-status.active {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
}

.template-status.inactive {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

.template-card-body {
  padding: 32rpx;
}

.template-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.template-package {
  margin-top: 16rpx;
}

.package-tag {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.template-card-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #e9ecef;
  background: #f8f9fa;
}

.card-btn {
  flex: 1;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.card-btn:active {
  transform: scale(0.98);
}

.card-btn.primary-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.card-btn.secondary-btn {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.card-btn.edit-btn {
  background: linear-gradient(135deg, #ffc107, #fd7e14);
  color: white;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #666;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.create-empty-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.create-empty-btn:active {
  transform: scale(0.98);
}

/* 悬浮按钮 */
.floating-add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.floating-add-btn:active {
  transform: scale(0.9);
}

.add-icon {
  font-size: 60rpx;
  color: white;
  font-weight: bold;
}

/* 儿童选择器弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.modal-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 1001;
  max-height: 85%;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #e9ecef;
  background: linear-gradient(135deg, #f8f9fa, #ffffff);
  border-radius: 32rpx 32rpx 0 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #666;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f0f0f0;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: #e0e0e0;
  transform: scale(0.9);
}

.modal-content {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
}

/* 模板预览区域 */
.template-preview {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
}

.preview-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 16rpx;
}

.preview-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.preview-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
}

.preview-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.preview-type {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 12rpx;
}

.type-badge {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.type-detail {
  font-size: 22rpx;
  color: #666;
}

/* 儿童选择区域 */
.child-selector {
  margin-bottom: 32rpx;
}

.selector-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.selector-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.select-all-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 22rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.select-all-btn:active {
  transform: scale(0.98);
}

.select-all-btn[disabled] {
  background: #e9ecef;
  color: #666;
  box-shadow: none;
}

/* 标准的 checkbox-group 样式 */
.child-checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.child-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.child-item {
  display: flex;
  align-items: center;
  background: white;
  border: 2rpx solid #e9ecef;
  border-radius: 20rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.child-item:active {
  background: #f8f9fa;
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.child-checkbox {
  margin-right: 20rpx;
  transform: scale(1.2);
}

.child-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.child-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.child-age {
  font-size: 22rpx;
  color: #666;
  background: #f8f9fa;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
  align-self: flex-start;
}

.empty-children {
  text-align: center;
  padding: 60rpx 0;
  color: #666;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.add-child-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.add-child-btn:active {
  transform: scale(0.98);
}

/* 选择摘要 */
.selection-summary {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  border: 1rpx solid #e9ecef;
}

.summary-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.selected-names {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.selected-name {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 1rpx solid #e9ecef;
  background: #f8f9fa;
}

.cancel-btn {
  flex: 1;
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
  border-radius: 20rpx;
  padding: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.cancel-btn:active {
  transform: scale(0.98);
  background: #e9ecef;
}

.confirm-btn {
  flex: 2;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.confirm-btn:active {
  transform: scale(0.98);
}

.confirm-btn[disabled] {
  background: #e9ecef;
  color: #999;
  box-shadow: none;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .filter-group {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .mode-switcher {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .package-actions,
  .template-card-actions {
    flex-direction: column;
  }
  
  .modal-footer {
    flex-direction: column;
  }
}