/* 任务管理页面样式 */
.container {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  background: white;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.filter-button,
.add-button {
  background: #4CAF50;
  color: white;
  border: none;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.filter-button:active,
.add-button:active {
  background: #45a049;
}

/* 筛选面板 */
.filter-panel {
  background: white;
  padding: 32rpx;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.filter-group {
  margin-bottom: 24rpx;
}

.filter-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.filter-value {
  background: #f8f9fa;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  font-size: 28rpx;
  color: #666;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.error-text {
  font-size: 32rpx;
  color: #f44336;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.retry-button {
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.retry-button:active {
  background-color: #45a049;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999;
}

/* 任务列表 */
.task-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.list-header {
  padding: 32rpx;
  border-bottom: 2rpx solid #f1f3f4;
}

.list-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 加载更多 */
.load-more {
  padding: 32rpx;
  text-align: center;
  border-top: 2rpx solid #f1f3f4;
}

.load-more-text {
  color: #4CAF50;
  font-size: 28rpx;
  font-weight: 500;
}

.no-more {
  padding: 32rpx;
  text-align: center;
  border-top: 2rpx solid #f1f3f4;
}

.no-more-text {
  color: #999;
  font-size: 28rpx;
}