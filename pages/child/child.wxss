/* 孩子视图页面样式 - 滚动屏设计 */
.container {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 头部区域 */
.header-section {
  padding: 40rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 孩子选择器 */
.child-selector {
  margin-bottom: 32rpx;
}

.picker-content {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
}

.child-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.child-info {
  flex: 1;
}

.child-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.child-details {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.picker-arrow {
  color: white;
  font-size: 24rpx;
}

/* 积分卡片 */
.points-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.points-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.points-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.points-subtitle {
  font-size: 24rpx;
  color: #666;
}

.points-display {
  text-align: center;
  margin-bottom: 32rpx;
}

.points-number {
  font-size: 80rpx;
  font-weight: bold;
  color: #667eea;
  line-height: 1;
}

.points-unit {
  font-size: 32rpx;
  color: #666;
  margin-left: 8rpx;
}

.points-stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 内容区域 */
.section {
  margin: 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
}

/* 任务进度 */
.task-progress {
  margin-bottom: 32rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #333;
}

.progress-percent {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
}

.progress-bar {
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 列表样式 */
.list-header {
  margin-bottom: 24rpx;
}

.list-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.task-list, .reward-list {
  margin-top: 24rpx;
}

/* 已完成任务 */
.completed-tasks {
  margin-top: 32rpx;
}

.completed-task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.task-info {
  flex: 1;
}

.task-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.task-points {
  font-size: 24rpx;
  color: #28a745;
  font-weight: bold;
}

.completed-badge {
  font-size: 24rpx;
  color: #28a745;
  background: rgba(40, 167, 69, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.empty-child-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 60rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.add-child-btn {
  background: white;
  color: #667eea;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.add-child-btn:active {
  background: #f0f0f0;
}

/* 底部安全区域 */
.safe-area-bottom {
  height: 120rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
  min-height: 60vh;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
  margin-bottom: 60rpx;
}

.add-child-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.add-child-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

/* 加载状态样式 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  min-height: 60vh;
}

.loading-state .loading-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}