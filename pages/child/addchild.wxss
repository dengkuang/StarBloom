/* 添加孩子页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

.header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.form {
  background: #ffffff;
  margin: 40rpx 24rpx;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 48rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  min-height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
  line-height: 1.4;
}

.input:focus {
  border-color: #667eea;
  background: #ffffff;
}

.input::placeholder {
  color: #999999;
}

.radio-group {
  display: flex;
  gap: 24rpx;
  width: 100%;
}

.radio-item {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  flex: 1;
  padding: 20rpx 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
  min-height: 88rpx;
  box-sizing: border-box;
}

.radio-item:active {
  background: #e9ecef;
}

.radio-item text {
  font-size: 28rpx;
  color: #333333;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 88rpx;
  width: 100%;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999999;
}

.button-group {
  display: flex;
  gap: 24rpx;
  margin-top: 60rpx;
  width: 100%;
}

.cancel-btn {
  flex: 1;
  min-height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  color: #666666;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.cancel-btn:active {
  background: #e9ecef;
}

.submit-btn {
  flex: 2;
  min-height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.submit-btn:active {
  opacity: 0.8;
}

.submit-btn:disabled {
  background: #cccccc;
  color: #999999;
}

.submit-btn:disabled:active {
  opacity: 1;
}

/* 头像选择样式 */
.avatar-section {
  width: 100%;
}

.current-avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid #e9ecef;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  line-height: 1.4;
}

/* 上传头像区域样式 */
.upload-section {
  margin-bottom: 24rpx;
  width: 100%;
}

.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  width: 100%;
  min-height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.upload-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.upload-btn::after {
  border: none;
}

.upload-icon {
  font-size: 32rpx;
}

.upload-text {
  font-size: 28rpx;
  font-weight: 600;
}

.avatar-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  width: 100%;
}

.avatar-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.avatar-item:active {
  transform: scale(0.95);
}

.avatar-item.selected {
  border-color: #667eea;
  box-shadow: 0 0 0 2rpx rgba(102, 126, 234, 0.2);
}

.avatar-thumb {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.avatar-check {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 32rpx;
  height: 32rpx;
  background: #667eea;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 年龄显示样式 */
.age-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 88rpx;
  width: 100%;
  background: #f0f8ff;
  border: 2rpx solid #e6f3ff;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}

.age-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #667eea;
}

.age-tip {
  font-size: 24rpx;
  color: #999999;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .avatar-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 12rpx;
  }
  
  .avatar-preview {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
  }
  
  .age-display {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
}