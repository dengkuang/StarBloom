/* 全局样式文件 */
/* 遵循用户偏好的界面颜色偏好：使用绿色作为界面主题色 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

/* 紫色主题色 */
.primary-color {
  color: #8d52da;
}

.background-green {
  background-color: #700ae4;
}

.border-green {
  border: 1px solid #dde011;
}