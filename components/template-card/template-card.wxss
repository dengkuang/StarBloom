/* components/template-card/template-card.wxss */
/* 模板卡片组件样式 - 重构版 */
.template-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.template-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.template-info {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.template-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
  line-height: 1.2;
}

.template-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: block;
}

.template-type {
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  display: inline-block;
  font-weight: 500;
}

.template-actions {
  display: flex;
  padding: 24rpx 32rpx;
  gap: 16rpx;
  background: #f8f9fa;
}

.action-btn {
  flex: 1;
  padding: 20rpx 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: transform 0.2s ease;
}

.action-btn:active {
  transform: scale(0.98);
}

.apply-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.preview-btn {
  background: white;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.edit-btn {
  background: linear-gradient(135deg, #28a745, #20c997);
  color: white;
}

.btn-icon {
  font-size: 20rpx;
}