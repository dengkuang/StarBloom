<!-- components/template-card/template-card.wxml -->
<!-- 模板卡片组件结构 - 重构版 -->
<view class="template-card">
  <view class="template-info">
    <text class="template-name">{{template.name}}</text>
    <text class="template-description">{{template.description}}</text>
    <text class="template-type">{{type === 'task' ? '📋 任务模板' : '🎁 奖励模板'}}</text>
  </view>
  
  <view class="template-actions">
    <button class="action-btn preview-btn" bindtap="onPreview">
      <text class="btn-icon">👁</text>
      <text>预览</text>
    </button>
    <button class="action-btn apply-btn" bindtap="onApply">
      <text class="btn-icon">✓</text>
      <text>应用</text>
    </button>
    <button class="action-btn edit-btn" bindtap="onEdit">
      <text class="btn-icon">✏️</text>
      <text>编辑</text>
    </button>
  </view>
</view>