/* 孩子选择器组件样式 */
.child-selector-container {
  position: relative;
  width: 100%;
}

/* 当前选中孩子显示区域 */
.current-child-display {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  transition: all 0.3s ease;
  position: relative;
  z-index: 10;
}

.current-child-display:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.child-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.child-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.child-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.child-details {
  font-size: 24rpx;
  color: #7f8c8d;
  opacity: 0.8;
}

.current-points {
  color: #e67e22;
  font-weight: 600;
}

.selector-arrow {
  font-size: 24rpx;
  color: #95a5a6;
  transition: transform 0.3s ease;
  margin-left: 16rpx;
}

.selector-arrow.rotate {
  transform: rotate(180deg);
}

/* 孩子列表 */
.child-list {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(20rpx);
  margin-top: 16rpx;
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transform: translateY(-20rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 20;
}

.child-list.show {
  max-height: 80vh; /* 使用视口高度，支持更多子元素 */
  opacity: 1;
  transform: translateY(0);
}

/* 滚动视图容器 */
.child-scroll-view {
  max-height: 70vh; /* 限制滚动区域最大高度 */
  min-height: 120rpx; /* 最小高度确保至少显示一个项目 */
}

.child-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
  position: relative;
}

.child-item:last-child {
  border-bottom: none;
}

.child-item:active {
  background: rgba(52, 152, 219, 0.1);
  transform: scale(0.98);
}

.child-item.selected {
  background: linear-gradient(135deg, rgba(52, 152, 219, 0.1) 0%, rgba(155, 89, 182, 0.1) 100%);
}

.child-item.selected::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(135deg, #3498db 0%, #9b59b6 100%);
  border-radius: 0 6rpx 6rpx 0;
}

/* 选中状态指示器 */
.check-indicator {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 3rpx solid #bdc3c7;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.check-indicator.checked {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
  border-color: #27ae60;
  transform: scale(1.1);
}

.check-mark {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
  opacity: 0;
  transform: scale(0);
  transition: all 0.2s ease;
}

.check-indicator.checked .check-mark {
  opacity: 1;
  transform: scale(1);
}

/* 小头像 */
.child-avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

/* 孩子信息 */
.child-info-small {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0; /* 防止文本溢出 */
}

.child-name-small {
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.child-details-small {
  font-size: 22rpx;
  color: #7f8c8d;
  opacity: 0.8;
}

/* 积分显示 */
.child-points {
  margin-left: 16rpx;
  flex-shrink: 0;
}

.points-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #e67e22;
  background: rgba(230, 126, 34, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 操作按钮区域 */
.child-actions {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.action-btn:active {
  transform: scale(0.9);
}

.edit-btn {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.3);
}

.edit-btn:active {
  background: linear-gradient(135deg, #2980b9 0%, #1f5f8b 100%);
}

.delete-btn {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  box-shadow: 0 4rpx 12rpx rgba(231, 76, 60, 0.3);
}

.delete-btn:active {
  background: linear-gradient(135deg, #c0392b 0%, #a93226 100%);
}

.action-icon {
  font-size: 28rpx;
  line-height: 1;
}

/* 遮罩层 */
.selector-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 15;
}

.selector-mask.show {
  opacity: 1;
  visibility: visible;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .current-child-display {
    padding: 20rpx;
  }
  
  .child-avatar {
    width: 70rpx;
    height: 70rpx;
  }
  
  .child-name {
    font-size: 30rpx;
  }
  
  .child-details {
    font-size: 22rpx;
  }

  .child-item {
    padding: 20rpx;
  }

  .action-btn {
    width: 50rpx;
    height: 50rpx;
  }

  .action-icon {
    font-size: 24rpx;
  }
}

/* 动画优化 */
.child-list {
  will-change: transform, opacity, max-height;
}

.child-item {
  will-change: transform, background-color;
}

.check-indicator {
  will-change: transform, background-color;
}

.action-btn {
  will-change: transform, background;
}