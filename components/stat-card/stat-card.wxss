/* components/stat-card/stat-card.wxss */
/* 统计卡片组件样式 */
.stat-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin: 20rpx;
}

.stat-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}

.stat-info {
  flex: 1;
}

.stat-title {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  display: block;
}