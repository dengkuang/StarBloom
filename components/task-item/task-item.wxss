/* components/task-item/task-item.wxss */
/* 任务项组件样式 */
.task-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border-left: 6rpx solid #667eea;
}

.task-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.task-emoji {
  font-size: 36rpx;
}

.task-info {
  flex: 1;
}

.task-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.task-description {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.task-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.task-points {
  font-size: 24rpx;
  color: #28a745;
  font-weight: bold;
  background: rgba(40, 167, 69, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.task-type {
  font-size: 20rpx;
  color: #666;
  background: #e9ecef;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.task-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  border: none;
}

.complete-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  font-weight: bold;
}

.complete-btn:active {
  opacity: 0.8;
}