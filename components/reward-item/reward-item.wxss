/* components/reward-item/reward-item.wxss */
/* 奖励项组件样式 */
.reward-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.reward-item.can-exchange {
  border-left: 6rpx solid #28a745;
}

.reward-item.cannot-exchange {
  border-left: 6rpx solid #dc3545;
  opacity: 0.7;
}

.reward-icon-container {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
}

.reward-icon {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.reward-emoji {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  background: linear-gradient(135deg, #ffd89b, #19547b);
  border-radius: 12rpx;
}

.reward-info {
  flex: 1;
}

.reward-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.reward-description {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.reward-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.reward-points {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.reward-category {
  font-size: 20rpx;
  color: #666;
  background: #e9ecef;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.reward-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  border: none;
}

.exchange-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  font-weight: bold;
}

.exchange-btn:active {
  opacity: 0.8;
}

.reward-status {
  display: flex;
  align-items: center;
}

.insufficient-points {
  font-size: 20rpx;
  color: #dc3545;
  background: rgba(220, 53, 69, 0.1);
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
}