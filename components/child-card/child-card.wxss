/* components/child-card/child-card.wxss */
/* 儿童卡片组件样式 */
.child-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin: 20rpx;
}

.child-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.child-info {
  flex: 1;
}

.child-name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.child-age, .child-points {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.child-actions {
  display: flex;
  flex-direction: column;
}

.action-btn {
  margin: 5rpx 0;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 5rpx;
}

.edit-btn {
  background-color: #4CAF50;
  color: white;
}

.delete-btn {
  background-color: #F44336;
  color: white;
}